      <div class="order-pay__tabs-container tabs-container">
        <div id="pay-money" class="order-pay__tabs-content tabs-content active">
          <p class="order-pay__tabs-content__text">
            Оплата наличными при получении
          </p>
          {{#if addressId}}
            <a
              class="order-pay__tabs-content__btn btn"
              href="/confirm-order?addressId={{addressId}}"
            >
              Далее
            </a>
          {{else}}
            {{#if officeId}}
              <a
                class="order-pay__tabs-content__btn btn"
                href="/confirm-order?officeId={{officeId}}"
              >
                Далее
              </a>
            {{else}}
              <a class="order-pay__tabs-content__btn btn" href="/confirm-order">
                Далее
              </a>
            {{/if}}

          {{/if}}

        </div>
        <div id="select-card" class="order-pay__tabs-content tabs-content">
          <ul class="select-card__list">
            <li class="select-card__item js__dropdown-wrapper">
              <div class="select-card__item-content js__dropdown-body">
                <p class="order-pay__tabs-content__text">
                  Заполните данные карты
                </p>
              </div>
              <div class="select-card__dropdown-list js__dropdown-list">
                <form
                  class="select-card__form"
                  action="/add-card"
                  method="POST"
                >
                  <div class="select-card__form-inner">
                    {{#if addressId}}
                      <input
                        type="hidden"
                        name="addressId"
                        value="{{addressId}}"
                      />
                    {{/if}}
                    {{#if officeId}}
                      <input
                        type="hidden"
                        name="officeId"
                        value="{{officeId}}"
                      />
                    {{/if}}

                    <input
                      class="select-card__form-input"
                      type="text"
                      name="cardNumber"
                      placeholder="Номер карты"
                      required
                    />
                    <input
                      class="select-card__form-input"
                      type="text"
                      name="cardDate"
                      placeholder="мм/гг"
                      required
                    />
                    <input
                      class="select-card__form-input"
                      type="text"
                      name="cvv"
                      placeholder="CVV"
                      required
                    />
                  </div>

                  <button
                    class="select-card__form-btn reverse-btn"
                    type="submit"
                  >
                    Далее
                  </button>

                </form>
              </div>
            </li>
            {{#if cards}}
              <li class="select-card__item js__dropdown-wrapper">
                <div class="select-card__item-content js__dropdown-body">
                  <p class="order-pay__tabs-content__text">
                    Выбрать из моих карт
                  </p>
                </div>
                <ul class="select-card__dropdown-list js__dropdown-list">
                  {{#each cards}}
                    <li class="select-card__dropdown-item">
                      <p class="select-card__dropdown-item__text">
