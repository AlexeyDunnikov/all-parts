<section class="catalog-subcategories page-section">
  <div class="container">
    <div class="catalog-subcategories__top">
      <h3 class="catalog-subcategories__title page-title">
        {{categoryName}}
      </h3>
      {{#if car}}
        <div class="car-info">
          <div class="car-info__content">
            <div class="car-info__content-title">
              {{car.mark}}
              {{car.model}}
              {{car.generation}}
              {{car.engine_value}}
            </div>
            <div class="car-info__content-text">
              Двигатель:
              {{car.engine_name}}
              /
              {{car.engine_power}}
              К.В. /
              {{car.engine_horses}}
              л.с.
            </div>
          </div>
          <div class="car-info__img">
            <img
              class="car-info__img"
              src="/images/cars-images/{{car.img}}"
              alt="image"
            />
          </div>
        </div>
      {{/if}}
    </div>

    {{#if subcategories.length}}
      <ul class="catalog-subcategories__list">
        {{#each subcategories}}
          <li class="catalog-subcategories__item">
            {{#if @root.modId}}
              <a
                href="/subcategories/{{id}}?mod_id={{@root.modId}}"
                class="catalog-subcategories__item-link"
              >

                {{#if img}}
                  <img
                    class="catalog-subcategories__item-img"
                    src="/images/part-subcategories/{{img}}"
                    alt="image"
                  />
                {{else}}
                  <img
                    class="catalog-subcategories__item-img"
                    src="/images/no-photo.png"
                    alt="image"
                  />
                {{/if}}

                <span class="catalog-subcategories__item-text">
                  {{name}}
                </span>

              </a>
            {{else}}
              <a
                href="/subcategories/{{id}}"
                class="catalog-subcategories__item-link"
              >

                {{#if img}}
                  <img
                    class="catalog-subcategories__item-img"
                    src="/images/part-subcategories/{{img}}"
                    alt="image"
                  />
                {{else}}
                  <img
                    class="catalog-subcategories__item-img"
                    src="/images/no-photo.png"
                    alt="image"
                  />
                {{/if}}

                <span class="catalog-subcategories__item-text">
                  {{name}}
                </span>

              </a>
            {{/if}}

          </li>
        {{/each}}
      </ul>
    {{/if}}

  </div>
</section>